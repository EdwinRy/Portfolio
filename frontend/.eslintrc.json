{
  "extends": [
    "next/core-web-vitals",
    "plugin:storybook/recommended"
  ],
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "quotes": [
      "warn",
      "double"
    ],
    "max-len": [
      "warn",
      {
        "code": 100,
        "tabWidth": 4
      }
    ],
    "no-trailing-spaces": "warn",
    "no-multiple-empty-lines": [
      "warn",
      {
        "max": 2,
        "maxEOF": 1
      }
    ],
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": "warn",
    "comma-dangle": [
      "warn",
      "always-multiline"
    ],
    "no-unreachable": "warn",
    "no-alert": "error",
    "no-nested-ternary": "error",
    "no-var": "warn",
    "no-shadow": "off",
    "@typescript-eslint/no-shadow": "warn",
    "react-hooks/exhaustive-deps": "off",
    "eol-last": [
      "warn",
      "always"
    ]
  }
}
